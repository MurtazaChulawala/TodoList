<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <%if (locals.newListItems){%>
    <div class="box">
      <%newListItems.forEach((item)=>{%>
        <div class="item">
          <form action="/delete/<%= listTitle %>" method="post">
          <input type="checkbox" name="checkbox" value="<%= item._id%>" onchange="this.form.submit()"></form>
          <p><%= item.task  %></p>
        </div>
        <%});%>  
  <%}else{}%>
      <form class="item" action="/<%= listTitle %>" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
